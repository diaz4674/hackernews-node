datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:number1@localhost:5432/mydb?schema=public"
}

generator client {
    provider = "prisma-client-js"
}

model Link {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    description String
    url         String
    postedBy    User?    @relation(fields: [postedById], references: [id])
    postedById  Int?
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    links    Link[]
}
